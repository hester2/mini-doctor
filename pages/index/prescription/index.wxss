  align-items: flex-start;
  height: 100%;
  box-sizing: border-box;
  padding-top: 10rpx;
}

.yh-pre-center {
  flex: 10;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.yh-pre-centers{
  display: flex;
  margin-left: 10rpx;
  align-items: flex-start;
  justify-content: space-between;
}

.yh-pre-left image {
  width: 33rpx;
  height: 33rpx;
