/* pages/more/doctor-record/index.wxss */
.container{
  width: 100%;
  margin: 28rpx 0px;
  box-sizing: border-box;
  padding: 0px 30rpx;
}
.yh-record-title{
  color: #49A0FF;

}

.yh-cation-main{
  margin-top: 20rpx;
  box-shadow: 0px 0px 4px 4px rgba(137, 137, 137, 0.05);
  box-sizing: border-box;
  padding: 28rpx 28rpx;
}

.word-class{

  font-size: 14px;

  color: rgb(95, 87, 87);

}

/* 选择图片 */

.img_box{

  width:100%;

  position:relative;

  display: flex;

  flex-wrap: wrap;

  margin:0 auto;

  padding-top: 20px;

}

.imgs{

  width:25%;

  display: flex;

  justify-content: center;

  margin-bottom:20rpx;
  position: relative;
}
.imgs .text{
  width: 80%;
  height: 40rpx;
  line-height: 40rpx;
  background-color: rgba(0, 0, 0, 0.4);
  color: #fff;
  font-size: 22rpx;
  text-align: center;
  position: absolute;
  bottom: 0px;
}

.imgs image{

  width:135rpx;

  height: 135rpx;

  border:1px solid rgba(214, 212, 212, 0.1);

}

.imgs .images{

  position:relative;

}

.images button{

  width:100%;

  height:100%;

  position:absolute;

  top:0;

  left:0;

}

.img_box .images{

  width:135rpx;

height: 135rpx;


  border-radius:4rpx;

  display: flex;

  align-items: center;

  justify-content: center;

}

.img_box .images>image{

  width: 100%;
  height: 100%

}

/* 上传按钮 */

.UploadBtnarea{

  width: 100%;

  height: 32px;

  margin-top: 30px;

  margin-bottom: 10px;

}

.UploadBtnclass{

  height: 100%;

  width: 30%;

  background-color: #49A0FF;

  color: white;

  align-self: center;

  font-size: 13px;

  border-radius: 60rpx;

  margin-top: 500rpx;

}
