}

.yh-pre-we {
  width: 334rpx;
  display: flex;
  justify-content: flex-end;
}

/*主容器*/

.stepper {
  width: 160rpx;
  height: 52rpx;
  border: 1px solid #ccc;
  border-radius: 3px;
}

/*加号和减号*/

.stepper text {
  float: left;
  width: 38rpx;
  line-height: 52rpx;
  text-align: center;
}

/*数值*/

.stepper input {
  width: 80rpx;
  height: 26px;
  float: left;
  margin: 0 auto;
  text-align: center;
  font-size: 12px;
  border-left: 1px solid #ccc;
  border-right: 1px solid #ccc;
}

/*普通样式*/

.stepper .normal {
  color: black;
}

/*禁用样式*/

.stepper .disable {
  color: #ccc;
}

