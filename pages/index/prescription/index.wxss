  box-sizing: border-box;
  padding: 25rpx 25rpx;
  height: 304rpx;
  margin-top: 30rpx;
  width: 100%;
}

.yh-evalu-tex text {
  color: #ccc;
  font-size: 22rpx;
  float: right;
}

.yh-evalu-tex textarea {
  height: 230rpx;
}

.place-holder {
  color: #d4d4de;
